<body>
    <div class="container big d-flex h-100 p-3 mx-auto flex-column">
    <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 ">
    <div class="container">
        <header class="masthead">
          <div class="inner">
            <h3 class="masthead-brand"><i class="fas fa-clinic-medical hosicon"></i> Ramaiah Clinic</h3>
            <nav class="nav nav-masthead justify-content-center">
              <a class="nav-link active" href="/">Home</a>
              <a class="nav-link" href="#">Add Doctor</a>
              <a class="nav-link" href="">Arrived list</a>
            </nav>
          </div>
        </header>
    </div>
</div> 
<!-- </div> -->

 <!-- <div class="row"> -->
  <%for(var i=0; i<userList.length; i++){%>

    <div class="col-lg-4 col-md-6 col-sm-12 cardBox cardCustom d-flex justify-content-center">
     <div class="card" style="width: 21rem;">
       <div class="card-body cardCustom ">
       <h5 class="card-title">Name: <%= userList[i].userName %></h5>
       <p class="card-text">mobile number: <%= userList[i].mobileNumber %></p>
       <p class="card-text">Appointment time: 2:30.</p>
       <p class="card-text">Appointment date: <%= userList[i].date %>.</p>
       <p class="card-text">Assigned Doctor: <%= userList[i].doctorName %>.</p>
       <p>
         <form class="formStyle" action="/arrived" method="post">
         <button href="#" type="submit" class="btn btn-outline-success" name="changeButton" value="<%=userList[i]._id %>"> <i class="fas fa-check"></i> Arrived</button>
         </form>
         <form class="" action="/delete" method="post">
         <button href="#" type="submit" class="btn btn-outline-danger" name="changeButton" value="<%=userList[i]._id %>"> <i class="fas fa-times"></i> Cancel Appointment</button>
         </form>
      </p>
      </div>
    </div>
   </div>
  <%}%>

</div>
</div>
<script src="app.js" charset="utf-8"></script>
</body>
</html>